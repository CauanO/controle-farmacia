{{#each erros}}
<div style="margin: 15px;" class="alert alert-danger">{{texto}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{else}}
{{/each}}
<body>
    <div class="auth-container">
        <div class="auth-card" style="width: 400px;">
            <a href="/usuarios/index">
            <button class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Voltar
            </button>
            </a>
            <h3 class="text-center">Cadastro</h3>
            <form action="/usuarios/cadastro/nova" method="POST">
                <div class="form-group">
                    <label for="username">Usuário</label>
                    <input type="text" class="form-control" id="nome" name="nome" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Senha</label>
                    <input type="password" class="form-control" id="senha" name="senha" required>
                </div>
                <div class="form-group">
                    <label for="password">Repita sua senha</label>
                    <input type="password" class="form-control" id="senha2" name="senha2" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
            </form>
            <p class="text-center mt-3">
                Já tem uma conta? <a href="/usuarios/login">Faça login</a>
            </p>
        </div>
    </div>
</body>
