{{>header}}

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-container">
                    <h2 class="form-title text-center">Cadastro de Fornecedor</h2>
                    <form action="/adm/fornecedor/nova" method="POST">
                        <div class="form-group">
                            <label for="text">Nome do Fornecedor</label>
                            <input type="text" class="form-control" name="nomeFornecedor" placeholder="Digite o nome">
                        </div>
                        <div class="form-group">
                            <label for="number">Telefone</label>
                            <input type="text" class="form-control" name="telefoneFornecedor"
                                placeholder="(99) 9 9988-8899">
                        </div>
                        <div class="form-group">
                            <label for="text">Email</label>
                            <input type="text" class="form-control" name="emailFornecedor"
                                placeholder="Digite seu email">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Cadastrar Fornecedor</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>