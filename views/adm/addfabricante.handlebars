<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-container">
                    <h2 class="form-title text-center">Cadastro de Fabricante</h2>
                    <form action="/adm/fabricante/nova" method="POST">
                        <div class="form-group">
                            <label for="text">Nome do Fabricante</label>
                            <input type="text" class="form-control" name="nomeFabricante"
                                placeholder="Digite o nome">
                        </div>
                        <div class="form-group">
                            <label for="number">Telefone</label>
                            <input type="text" class="form-control" name="telefoneFabricante"
                                placeholder="(99) 9 9988-8899">
                        </div>
                        <div class="form-group">
                            <label for="text">Email</label>
                            <input type="text" class="form-control" name="emailFabricante"
                                placeholder="Digite seu email">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Cadastrar Fabricante</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>