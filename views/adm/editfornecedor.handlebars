    {{>header}}
{{#each erros}}
<div style="margin: 15px;" class="alert alert-danger">{{texto}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{else}}
{{/each}}

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-container">
                    <h2 class="form-title text-center">Editar Fornecedor</h2>
                    <form action="/adm/fornecedor/edit" method="POST">
                        <input type="hidden" name="id" value="{{fornecedores._id}}">
                        <div class="form-group">
                            <label for="text">Nome do Fabricante</label>
                            <input type="text" class="form-control" name="nomeFornecedor"
                                placeholder="Digite o nome" value="{{fornecedores.nomeFornecedor}}" >
                        </div>
                        <div class="form-group">
                            <label for="number">Telefone</label>
                            <input type="text" class="form-control" name="telefoneFornecedor"
                                placeholder="(99) 9 9988-8899" value="{{fornecedores.telefoneFornecedor}}" >
                        </div>
                        <div class="form-group">
                            <label for="text">Email</label>
                            <input type="text" class="form-control" name="emailFornecedor"
                                placeholder="Digite seu email" value="{{fornecedores.emailFornecedor}}">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Editar Fabricante</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>